# =====================================================
# Gestoo Platform - Environment Variables
# Copy this file to .env and fill in your values
# =====================================================

# -----------------------------------------------------
# General Configuration
# -----------------------------------------------------
# Environment: development, staging, production
NODE_ENV=development

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------
# Service Ports
# -----------------------------------------------------
# Port for the chatbot service (WhatsApp webhook)
CHATBOT_PORT=4000

# Port for the scraper service
SCRAPER_PORT=4001

# Port for the intelligence/analytics service
INTELLIGENCE_PORT=5000

# Nginx ports (when using reverse proxy)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Redis port
REDIS_PORT=6379

# -----------------------------------------------------
# Redis Configuration
# -----------------------------------------------------
# Redis connection URL (used by all services)
REDIS_URL=redis://redis:6379

# Redis password (optional, recommended for production)
# REDIS_PASSWORD=your_secure_redis_password

# -----------------------------------------------------
# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
# -----------------------------------------------------
# Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous (public) key - safe to expose
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key - KEEP SECRET, server-side only
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase JWT secret (for custom token verification)
# SUPABASE_JWT_SECRET=your_jwt_secret

# -----------------------------------------------------
# WhatsApp / WATI Configuration
# Get these from: https://app.wati.io/
# -----------------------------------------------------
# WATI API endpoint
WATI_API_URL=https://live-server-xxxxxx.wati.io

# WATI API key for authentication
WATI_API_KEY=your_wati_api_key

# WATI webhook verification secret
WATI_WEBHOOK_SECRET=your_wati_webhook_secret

# -----------------------------------------------------
# WhatsApp Business API (Direct Integration)
# Get these from: https://developers.facebook.com/
# -----------------------------------------------------
# WhatsApp Business phone number ID
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# WhatsApp Business access token
WHATSAPP_ACCESS_TOKEN=your_access_token

# WhatsApp webhook verification token (you define this)
WHATSAPP_VERIFY_TOKEN=your_verify_token_string

# WhatsApp Business Account ID
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# -----------------------------------------------------
# Payment Provider Configuration
# -----------------------------------------------------
# Orange Money Senegal
ORANGE_MONEY_MERCHANT_ID=your_merchant_id
ORANGE_MONEY_API_KEY=your_orange_money_api_key
ORANGE_MONEY_SECRET=your_orange_money_secret
ORANGE_MONEY_CALLBACK_URL=https://yourdomain.com/webhooks/orange-money

# Wave Senegal
WAVE_API_KEY=your_wave_api_key
WAVE_SECRET_KEY=your_wave_secret_key
WAVE_WEBHOOK_SECRET=your_wave_webhook_secret
WAVE_CALLBACK_URL=https://yourdomain.com/webhooks/wave

# Free Money
FREE_MONEY_MERCHANT_ID=your_merchant_id
FREE_MONEY_API_KEY=your_free_money_api_key
FREE_MONEY_SECRET=your_free_money_secret

# PayDunya (Alternative payment gateway)
PAYDUNYA_MASTER_KEY=your_master_key
PAYDUNYA_PRIVATE_KEY=your_private_key
PAYDUNYA_PUBLIC_KEY=your_public_key
PAYDUNYA_TOKEN=your_token

# -----------------------------------------------------
# AI/ML Service Configuration
# -----------------------------------------------------
# Anthropic Claude API key (for LLM features)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API key (alternative LLM provider)
OPENAI_API_KEY=sk-xxxxx

# -----------------------------------------------------
# Scraper Service Configuration
# -----------------------------------------------------
# Cron schedule for scraping jobs (default: every 6 hours)
SCRAPER_SCHEDULE=0 */6 * * *

# Maximum concurrent scraping requests
SCRAPER_CONCURRENCY=3

# Scraper request timeout in milliseconds
SCRAPER_TIMEOUT=30000

# User agent for scraping requests
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# -----------------------------------------------------
# Email/SMS Notification Configuration
# -----------------------------------------------------
# SMTP configuration for email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@gestoo.sn

# Twilio for SMS (backup notifications)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+221xxxxxxxxx

# -----------------------------------------------------
# Security Configuration
# -----------------------------------------------------
# JWT secret for internal service authentication
JWT_SECRET=your_very_long_random_secret_key_here

# API rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://gestoo.sn,https://admin.gestoo.sn

# -----------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Enable detailed logging
DEBUG=gestoo:*

# -----------------------------------------------------
# SSL/TLS Configuration (for production)
# -----------------------------------------------------
# Path to SSL certificate
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem

# Path to SSL private key
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
