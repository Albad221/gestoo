# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Server Configuration
PORT=3003
NODE_ENV=development

# Job Schedules (cron format)
DAILY_RISK_UPDATE_SCHEDULE="0 2 * * *"
WEEKLY_REPORT_SCHEDULE="0 6 * * 1"
MONTHLY_TREND_ANALYSIS_SCHEDULE="0 4 1 * *"

# Feature Flags
ENABLE_SCHEDULED_JOBS=true

# ===========================================
# OSINT / Enrichment API Keys
# ===========================================

# Truecaller - Phone lookup (name, email, photo, spam detection)
# Get installation ID by following: https://github.com/AnaZuber/truecallerjs#getting-the-installation-id
TRUECALLER_INSTALLATION_ID=

# Numverify - Phone validation and carrier lookup
# Get API key from: https://numverify.com/
NUMVERIFY_API_KEY=

# FullContact - Person enrichment (social profiles, photos, employment)
# Get API key from: https://www.fullcontact.com/
FULLCONTACT_API_KEY=

# Have I Been Pwned - Email breach checking
# Get API key from: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=

# OpenSanctions - Sanctions screening (OFAC, UN, EU, 100+ lists)
# Get API key from: https://www.opensanctions.org/api/
# Note: Free tier available (1000 requests/month)
OPENSANCTIONS_API_KEY=

# Hunter.io - Email verification (optional)
# Get API key from: https://hunter.io/
HUNTER_API_KEY=

# EmailRep - Email reputation (no key required for basic usage)
# Premium API key from: https://emailrep.io/
EMAILREP_API_KEY=
